{
  "name": "emily-cookbook-manager",
  "version": "1.0.0",
  "description": "Desktop application for managing Emily's cookbook recipes",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "jest"
  },
  "keywords": [
    "cookbook",
    "recipe",
    "manager",
    "electron",
    "desktop"
  ],
  "author": "Emily Ashworth",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.3.0",
    "electron-builder": "^25.0.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "electron-log": "^5.0.0",
    "fs-extra": "^11.0.0",
    "simple-git": "^3.19.0"
  },
  "build": {
    "appId": "com.emilyashworth.cookbook-manager",
    "productName": "Emily's Cookbook Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    }
  }
}
